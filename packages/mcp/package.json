{
  "name": "@prompted-forge/mcp",
  "version": "0.3.3",
  "description": "Model Context Protocol integration for Prompted Forge memory system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest --passWithNoTests",
    "lint": "eslint --max-warnings=0 \"src/**/*.ts\"",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "clean": "rm -rf dist",
    "smoke": "npx ts-node src/smoke.ts",
    "smoke:enhanced": "npx ts-node scripts/enhanced-smoke-test.ts",
    "ci-matrix": "bash scripts/ci-matrix-test.sh",
    "wire-test": "npx ts-node tests/wire-test.ts",
    "error-test": "npx ts-node tests/error-seam-test.ts",
    "orchestrator-test": "npx ts-node tests/orchestrator-integration-test.ts",
    "validate": "npm run wire-test && npm run error-test && npm run orchestrator-test",
    "smoke:mcp": "npx ts-node scripts/mcp-smoke-test.ts",
    "perf-test": "npx ts-node scripts/performance-test.ts",
    "check-perf-budget": "npx ts-node scripts/check-perf-budget.ts",
    "test:health-endpoint": "npx ts-node tests/health-endpoint.test.ts",
    "test:version-endpoint": "npx ts-node tests/version-endpoint.test.ts",
    "generate-contracts-snapshot": "npx ts-node scripts/generate-contracts-snapshot.ts",
    "gen:contracts": "node scripts/generate-contracts-snapshot.js",
    "perf:check": "node scripts/check-perf-budget.js",
    "validate:phase3_2": "node scripts/validate-phase-3-2.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@prompted-forge/memory": "*",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "ws": "^8.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
